# Kindle OCR Configuration
# Copy this file to config.env and update with your settings

# Google Cloud Service Account JSON file path
# Download from Google Cloud Console > IAM & Admin > Service Accounts
SERVICE_ACCOUNT_PATH="/path/to/your/service-account.json"

# Google Drive folder ID where documents will be uploaded
# Get this from the Google Drive folder URL: https://drive.google.com/drive/folders/FOLDER_ID_HERE
DRIVE_FOLDER_ID="your_google_drive_folder_id_here"

# Maximum number of pages to capture (safety limit)
MAX_PAGES=500

# Optional: Skip certain steps (true/false)
# SKIP_DRIVE=false
# SKIP_PDF=false